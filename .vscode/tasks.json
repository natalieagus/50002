{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Echo vars",
            "command": "echo",
            "args": [
              "${env:USERNAME}",
              "workspaceFolder = ${workspaceFolder}"
            ],
            "type": "shell"
         },
        {
            "label": "Serve",
            "type": "shell",
            "command": "bundle exec jekyll serve",
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}